      <div class="font-bold my-[20px]">
        <%= @coin_values %>
      </div>
      <.link
        href={~p"/users/user_actions"}
        phx-click="make_change"
        class="bg-primaryOrange text-white p-4 rounded-xl mx-auto m-[10px]"
